{
  "name": "screenshot-rs",
  "version": "0.1.0",
  "description": "Rust-based screen capture N-API addon returning Blob (PNG)",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=16.17.0"
  },
  "scripts": {
    "build": "napi build --release",
    "build:debug": "napi build",
    "prepublishOnly": "tnpm run build"
  },
  "dependencies": {
    "@node-rs/helper": "^1.5.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.16.0"
  },
  "napi": {
    "name": "screenshot_rs",
    "triples": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ]
  },
  "files": [
    "index.js",
    "index.d.ts",
    "README.md",
    "*.node",
    "npm/**"
  ]
} 